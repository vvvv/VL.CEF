<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>

    <PackageOutputPath>$(MsBuildThisFileDirectory)bin\</PackageOutputPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    
    <!-- Used VL version -->
    <VLVersion>2022.5.0-0683-g91567c285a</VLVersion>

    <!-- Version information -->
    <Year>$([System.DateTime]::Now.ToString('yyyy'))</Year>
    <Version>0.4.0-preview</Version>

    <!-- Package properties -->
    <Authors>vvvv group</Authors>
    <Owners>$(Authors)</Owners>
    <Copyright>Copyright Â© $(Year) by $(Authors). All rights reserved.</Copyright>
    <PackageProjectUrl>http://vvvv.org</PackageProjectUrl>
    <RepositoryUrl>https://github.com/vvvv/VL.CEF</RepositoryUrl>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
  </PropertyGroup>
</Project>